<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boxLabelTextViewText"
        android:layout_gravity="right"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/boxValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:gravity="center" />

    <Button
        android:id="@+id/setBoxButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/setBoxButtonText"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/envidTextViewText"
        android:layout_gravity="right"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/envidEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="1"
        android:inputType="text"
        android:selectAllOnFocus="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wtTextViewText"
        android:layout_gravity="right"
        android:textSize="20sp"
        android:layout_column="0" />

    <EditText
        android:id="@+id/wtEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="1"
        android:inputType="number"
        android:text="@string/wtEditTextText"
        android:selectAllOnFocus="true"
        android:textSize="20sp" />

</GridLayout>